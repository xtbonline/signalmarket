<% let type="text" %>

    <div class="mb-4">
        <label for="<%= id %> " class="text-base font-tf-medium block mb-2">
            <%= label %>
        </label>
        <div class="overflow-x-hidden overflow-y-auto bg-white w-full flex flex-shrink flex-grow mb-0 items-center">
            <input id="<%= id %> " name="<%= id %>"
                class="w-full h-16 px-3 py-2 m-0 border border-gray-400 rounded-md bg-none focus:outline-none focus:border-[orange]  text-black font-tf-medium text-base"
                type="<%=type  %>" placeholder="<%= placeholder %>">
        </div>
    </div>